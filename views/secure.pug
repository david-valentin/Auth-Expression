html
	head
		title Shop Comet
		style
			include ./styles/index.css
	body
		div(class="navBar")
			ul(class="topnav")
				li
					a(href='/logout') Logout
				li(class="right")
					a(href="/basket") Basket
		h1 Hi, #{email}
		- var list = ["Shaffers", "Ninos", "Green Peppers", "Sbai Sbai", "Noonies"]
		- var imgs = ["shaffers-logo.png", "greenpeppers-logo.png", "sbaisbai-logo.png", "noonies-logo.png",]

		div(class="restaurantList")
			each val, index in ["Shaffers", "Ninos", "Green Peppers", "Sbai Sbai", "Grille", "Noonis"]
				div(class="restaurantImg")
						a(href="google.com")
							li=item	
							img(src= "/assets/" + imgs[index])		
					
						
		
			
